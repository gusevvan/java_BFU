<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.recipesystem.ContraindicationController">
   <children>
      <HBox layoutX="1.0" layoutY="3.0">
         <children>
            <VBox>
               <children>
                  <Label text="Противопоказание"/>
                  <ComboBox fx:id="contraindicationComboBox"/>
                  <Button mnemonicParsing="false" onAction="#onAddButtonClick" text="Добавить" />
                  <Button mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Удалить" />
               </children>
            </VBox>
            <TableView fx:id="tableContraindication" prefHeight="400" prefWidth="600">
               <columns>
                  <TableColumn fx:id="contraindicationCol" text="Name" prefWidth="300"/>
               </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
