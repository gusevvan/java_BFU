<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.recipesystem.DishTypesController">
   <children>
      <HBox layoutX="1.0" layoutY="3.0">
         <children>
            <VBox>
               <children>
                  <Label text="Dish type"/>
                  <TextField fx:id="txtDishType"/>
                  <Button mnemonicParsing="false" onAction="#onAddButtonClick" text="Add" />
                  <Button mnemonicParsing="false" onAction="#onUpdateButtonClick" text="Change" />
                  <Button mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Delete" />
               </children>
            </VBox>
            <TableView fx:id="tableDishTypes" prefHeight="391.0" prefWidth="463.0">
               <columns>
                  <TableColumn fx:id="idCol" text="Id"/>
                  <TableColumn fx:id="dishTypeCol" text="Dish type"/>
               </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
